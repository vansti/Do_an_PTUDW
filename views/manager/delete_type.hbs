<form id="frmLogout" method="post" action="/manager/logout"></form>
<form id="frmRemoveType" method="post" action="/manager/removeType">
    <input id="txtProId_R" type="hidden" name="Ma_loai">
</form>
<ul class="breadcrumb">
    <li style="font-size: x-large">
        <b> Delete Type</b>
    </li>
</ul>
<hr class="soft" />

<h2 style="text-align: center">Type List</h2>

<div class="table-responsive" style="margin-top:30px">
    <table class="table table-condensed table-bordered table-secondary table-hover table-striped">
        <thead style="background-color: rgba(19, 14, 14, 0.822);color: beige">
            <tr class="text-primary">
                <th>Type Name</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            {{#each type}}
            <tr>
                <th>{{Ten_loai}}</th>
                <th>
                    <a type="button" class="btn btn-danger removeType" data-proid="{{Ma_loai}}" href="javascript:;">
                        <span class="fa fa-remove"></span>
                    </a>
                </th>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<script type="text/javascript" src="/themes/js/jquery-3.1.1.min.js"></script>
<script type="text/javascript">
    $('#lnkLogout').on('click', function () {
        $('#frmLogout').submit();
    });

    $('.removeType').on('click', function () {
        if (confirm("Do you really want to delete this type ?")) {
            var id = $(this).data('proid');
            $('#txtProId_R').val(id);
            $('#frmRemoveType').submit();
        }
    });
</script>