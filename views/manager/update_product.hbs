<form id="frmLogout" method="post" action="/manager/logout"></form>
<ul class="breadcrumb">
    <li style="font-size: x-large">
        <b> Update Product</b>
    </li>
</ul>
<div class="btn-group">
    {{#each brand}}
    <a type="button" class="btn btn-primary" href="/manager/update_product/{{Ten_hang}}">{{Ten_hang}}</a>
    {{/each}}

</div>
<hr class="soft" />

<h2 style="text-align: center">Product List</h2>

<div class="table-responsive" style="margin-top:30px">
    <table class="table table-condensed table-bordered table-secondary table-hover table-striped">
        <thead style="background-color: rgba(19, 14, 14, 0.822);color: beige">
            <tr class="text-primary">
                <th>Product</th>
                <th>Brand</th>
                <th>Price</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <th>{{Ten}}</th>
                <th>{{Hang}}</th>
                <th>{{number_format Don_gia_ban}} Ä‘</th>
                <th>
                    <a type="button" class="btn btn-danger" href="/manager/edit?id={{Ma_so}}">
                        <span class="fa fa-pencil"></span>
                    </a>
                </th>
                <th>
                    <a type="button" class="btn btn-danger" onclick="Showconfirm({{Ma_so}},'{{Hang}}')">
                        <span class="fa fa-remove"></span>
                    </a>
                </th>
            </tr>

            {{/each}}
        </tbody>
    </table>
</div>


<script>
    function Showconfirm(Ma_so, Hang) {
        if (confirm("Do you really want to delete this product ?")) {
            window.location.href = "/manager/delete?id=" + Ma_so + "&brand=" + Hang;
        }
    }
</script>
<script type="text/javascript" src="/themes/js/jquery-3.1.1.min.js"></script>
<script type="text/javascript">
    $('#lnkLogout').on('click', function () {
        $('#frmLogout').submit();
    });
</script>