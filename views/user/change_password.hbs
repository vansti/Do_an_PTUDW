    </li>
    <li class="active">Change Password</li>
</ul>
<h3> Change Password </h3>
<div class="well">
    {{#if success}}
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <strong>Success !</strong> Change your password successfully.
    </div>
    {{else}}
    <form class="form-horizontal" action="change_password" method="post">
        <div class="control-group">
            <label class="control-label">Confirm Password
            </label>
            <div class="controls">
                <input type="password" name="confirm_password" required>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">New Password
            </label>
            <div class="controls">
                <input type="password" name="new_password" required>
            </div>
        </div>
        {{#if error}}
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong>Erorr! </strong> Your confirm password is incorect.
        </div>
        {{/if}}
        <div class="control-group">
            <div class="controls">
                <input class="btn btn-large btn-success" type="submit" value="Update" />
            </div>
        </div>
    </form>
    {{/if}}
</div>
<script type="text/javascript" src="/themes/js/jquery-3.1.1.min.js"></script>
<script type="text/javascript">
    $('#lnkLogout').on('click', function () {
        $('#frmLogout').submit();
    });
</script>